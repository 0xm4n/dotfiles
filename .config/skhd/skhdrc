# Navigation
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# Moving windows
alt + shift - j : yabai -m window --swap south
alt + shift - k : yabai -m window --swap north
alt + shift - h : yabai -m window --swap west
alt + shift - l : yabai -m window --swap east

# Make window native fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen
alt + shift - f : yabai -m window --toggle native-fullscreen

# toggle window float
alt + shift - space : yabai -m window --toggle float --grid 4:4:1:1:2:2

# move window to space
alt + shift - m : yabai -m window --space last; yabai -m space --focus last
alt + shift - p : yabai -m window --space prev; yabai -m space --focus prev
alt + shift - n : yabai -m window --space next; yabai -m space --focus next
alt + shift - 1 : yabai -m window --space 1;
alt + shift - 2 : yabai -m window --space 2;
alt + shift - 3 : yabai -m window --space 3;
alt + shift - 4 : yabai -m window --space 4;
alt + shift - 5 : yabai -m window --space 5;
alt + shift - 6 : yabai -m window --space 6;
alt + shift - 7 : yabai -m window --space 7;
alt + shift - 8 : yabai -m window --space 8;

alt + shift - c : brew services start yabai
alt + shift - r : brew services restart yabai
alt + shift - e : brew services stop yabai

#change focus between external displays (left and right)
alt + cmd - h : yabai -m display --focus west
alt + cmd - l : yabai -m display --focus east
